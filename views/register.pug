extends layout

block content
  div.container
    div.row.mt-5
      div.col-sm-12.col-md-6.offset-md-3
        div.card
          div.card-body
            h2.card-title Sign Up
            p.card-text Quick and easy!
            hr
            form(action='/api/auth/register', method="post")
              div.form-group
                label(for="usernameInput") Username
                input.form-control(id="usernameInput" type='text', placeholder="Enter username", name="username")
              br
              div.form-group
                label(for="usernameInput") Email
                input.form-control(id="usernameInput" type='email', placeholder="e@mail.com", name="email")
              br
              div.form-group
                label(for="passwordInput") Password
                input.form-control(id="passwordInput" type='password', placeholder="Password", name="password")
              br
              button.btn.btn-success(type="submit") Register
              a.card-text.p-3(href="/register") Already have an account? Login
